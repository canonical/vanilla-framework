# Params
# variant: component permutations on mobile, tablet, and desktop
#   1: full width, full width, 25-25-75
#   2: full width, 50-50, 25-25-75
#   3: full width, 50-50, 50-50
#   4: full width, full width, 50-50
# title: split list title text
# list_items: array of content objects for list
#   [{ 'title': string, 'description': string }]
{% macro split_list_compact(variant=1, title='', list_items=[{}]) -%}
<div class="u-fixed-width">
  <hr class="u-hide--small">

  <div class="row">
    <div class="{% if variant == 1 or variant == 2 %}col-12{% else %}col-6{% endif %}">
      <div class="p-section--shallow">
        <h2>
          {{ title }}
        </h2>
      </div>
    </div>

    <div class="{% if variant == 1 or variant == 2 %}col-9 col-start-large-4{% else %}col-6{% endif %}">
      {% for list_item in list_items %}
        <div class="row">
          <div class="col-12">
            <hr class="{% if variant == 1 or variant == 2 or loop.index != 1 %} {% else %}u-hide--large{% endif %}">
          </div>
        </div>

        <div class="row">
          <div class="{% if variant == 1 or variant == 4 %}col-3{% else %}col-medium-3 col-3{% endif %}">
            <h5>
              {{ list_item.title }}
            </h5>
          </div>

          <div class="{% if variant == 1 %}col-6{% elif variant == 2 %}col-medium-3 col-6{% elif variant == 3 %}col-medium-3 col-3{% else %}col-3{% endif %}">
            <p>
              {{ list_item.description }}
            </p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{%- endmacro %}
