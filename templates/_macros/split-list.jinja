{% macro split_list(variant=1, title='', list_items=[{}]) -%}
<div class="u-fixed-width">
  <hr class="u-hide--small">

  <div class="row">
    {% if variant == 1 or variant == 2 %}
      <div class="col">
    {% else %}
      <div class="col-6">
    {% endif %}
      <div class="p-section--shallow">
        <h2>
          {{ title }}
        </h2>
      </div>
    </div>

    {% if variant == 1 or variant == 2 %}
      <div class="col-9 col-start-large-4">
    {% else %}
      <div class="col-6">
    {% endif %}
      {% for list_item in list_items %}
        <div class="row">
          <div class="col">
            {% if variant == 1 or variant == 2 or loop.index != 1 %}
              <hr>
            {% else %}
              <hr class="u-hide--large">
            {% endif %}
          </div>
        </div>

        <div class="row">
          {% if variant == 1 %}
            <div class="col-3">
          {% elif variant == 2 %}
            <div class="col-medium-3 col-3">
          {% elif variant == 3 %}
            <div class="col-medium-3 col-3">
          {% elif variant == 4 %}
            <div class="col-3">
          {% endif %}
            <h5>
              {{ list_item.title }}
            </h5>
          </div>

          {% if variant == 1 %}
            <div class="col-6">
          {% elif variant == 2 %}
            <div class="col-medium-3 col-6">
          {% elif variant == 3 %}
            <div class="col-medium-3 col-3">
          {% elif variant == 4 %}
            <div class="col-3">
          {% endif %}
            <p>
              {{ list_item.description }}
            </p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{%- endmacro %}
