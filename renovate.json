{
  "extends": ["config:base", "schedule:monthly", "group:all"],
  "packageRules": [
    {
      "depTypeList": ["devDependencies"],
      "extends": [":automergeMinor"]
    },
    {
      "packageNames": ["vanilla-framework"],
      "minor": {
        "automerge": false
      },
      "patch": {
        "automerge": false
      }
    },
    {
      "#": "pretty-quick@2 requires version of node that we can't install on jenkins",
      "packageNames": ["pretty-quick"],
      "allowedVersions": "<=2"
    }
  ]
}
