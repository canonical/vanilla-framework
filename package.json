  "description": "A simple, extendable CSS framework.",
  "devDependencies": {
    "es6-promise": "^4.0.5",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^4.0.0",
    "gulp-cssnano": "^2.1.2",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.1.0",
    "gulp-sass-lint": "^1.3.2",
    "gulp-shell": "^0.6.1",
    "gulp-sourcemaps": "^2.3.1",
    "husky": "^1.1.0",
    "markdown-spellcheck": "^1.0.0",
    "parker": "^0.0.10",
    "prettier": "1.14.3",
    "pretty-quick": "^1.7.0",
    "wrench": "^1.5.9"
  },
  "homepage": "http://canonical-web-and-design.github.io/vanilla-framework/",
  "keywords": [
    "ubuntu",
    "vanilla",
    "framework",
    "CSS",
    "SASS",
    "SCSS",
    "mixin",
    "module"
  ],
  "license": "LGPL-3.0",
  "name": "vanilla-framework",
  "repository": {
    "type": "git",
    "url": "https://github.com/vanilla-framework/vanilla-framework"
  },
  "scripts": {
    "build": "gulp build",
    "build-docs-css": "node-sass --include-path node_modules docs/sass --source-map true --output-style compressed --output docs/css && yarn run build && cp build/css/build.css docs/css/current-vanilla.css",
    "build-docs-site": "bundle exec jekyll build --source docs --destination docs/_site",
    "build-docs": "yarn run build-docs-css && yarn run build-docs-site",
    "serve": "yarn run build-docs && bundle exec jekyll serve --source docs --destination docs/_site --port ${PORT} -H 0.0.0.0",
    "test": "gulp test",
    "watch": "gulp develop",
    "clean": "rm -rf build _jekyll/_site docs/templates node_modules/ yarn-error.log .bundle",
    "build-examples": "gulp build-examples",
    "report": "gulp report",
    "precommit": "pretty-quick --staged"
  },
  "version": "1.8.1",
  "dependencies": {
    "docs-vanilla-framework": "npm:vanilla-framework@1.8.1",
    "minimist": "^1.2.0"
  }
}
